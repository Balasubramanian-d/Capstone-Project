pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                // Build the Docker image from the Dockerfile
                script {
                    if (env.BRANCH_NAME == 'dev') {
                        dockerImageDev = docker.build("my-app:dev")
                    } else if (env.BRANCH_NAME == 'master') {
                        dockerImageMaster = docker.build("my-app:prod")
                    }
                }
            }
        }
        stage('Test') {
            steps {
                // Run some tests on the Docker image
                script {
                    if (env.BRANCH_NAME == 'dev') {
                        dockerImageDev.inside {
                            sh 'npm test'
                        }
                    } else if (env.BRANCH_NAME == 'master') {
                        dockerImageMaster.inside {
                            sh 'npm test'
                        }
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                // Push the Docker image to the appropriate Docker Hub repository
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'Docker') {
                        if (env.BRANCH_NAME == 'dev') {
                            dockerImageDev.push('dev')
                        } else if (env.BRANCH_NAME == 'master') {
                            dockerImageMaster.push('prod')
                        }
                    }
                }
            }
        }
    }
}
